import java.util.ArrayList;
import java.util.Collections;

public class Solution 
{
    public static void reverseArray(ArrayList<Integer> arr, int m)
    {
        // Write your code here.

     int n = arr.size();
     int i = m + 1;
     int j = n -1;

      while(i < j){
          Collections.swap(arr, i, j);
          i++;
          j--;
      }

      
    }
}
